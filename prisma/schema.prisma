generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int      @id @default(autoincrement())
  email     String   @unique @db.VarChar(191)
  password  String   @db.VarChar(255)
  name      String?  @db.VarChar(255)
  role      String   @default("user") @db.VarChar(50)
  status    String   @default("active") @db.VarChar(50)
  modules   String?  @db.Text
  createdAt DateTime @default(now()) @map("createdAt")
  updatedAt DateTime @updatedAt @map("updatedAt")

  sales    Sale[]
  expenses Expense[]

  @@index([role])
  @@index([status])
  @@map("User")
}

model Sale {
  id             Int      @id @default(autoincrement())
  subtotal       Decimal  @db.Decimal(10, 2)
  discount       Decimal  @db.Decimal(10, 2)
  total          Decimal  @db.Decimal(10, 2)
  paymentMethod  String   @db.VarChar(50)
  amountReceived Decimal  @db.Decimal(10, 2)
  change         Decimal  @map("change") @db.Decimal(10, 2)
  customerName   String?  @db.VarChar(255)
  status         String   @db.VarChar(50)
  commission     Decimal  @default(0) @db.Decimal(10, 2)
  employeeId     Int?     @map("employeeId")
  employeeName   String?  @db.VarChar(255) @map("employeeName")
  userId         Int      @map("userId")
  createdAt      DateTime @default(now()) @map("createdAt")
  updatedAt      DateTime @updatedAt @map("updatedAt")

  user  user       @relation(fields: [userId], references: [id])
  items SaleItem[]

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([employeeId])
  @@map("Sale")
}

model SaleItem {
  id        Int      @id @default(autoincrement())
  saleId    Int      @map("saleId")
  productId String   @db.VarChar(255)
  variantId String   @db.VarChar(255)
  title     String   @db.VarChar(255)
  price     Decimal  @db.Decimal(10, 2)
  quantity  Int
  commission Decimal @default(0) @db.Decimal(10, 2)
  sku       String?  @db.VarChar(255)
  image     String?  @db.VarChar(500)
  createdAt DateTime @default(now()) @map("createdAt")

  sale Sale @relation(fields: [saleId], references: [id], onDelete: Cascade)

  @@index([saleId])
  @@map("SaleItem")
}

model ExpenseTitle {
  id        Int      @id @default(autoincrement())
  exp_title String   @unique @db.VarChar(191)
  createdAt DateTime @default(now()) @map("createdAt")

  expenses Expense[]

  @@map("ExpenseTitle")
}

model Expense {
  id              Int      @id @default(autoincrement())
  exp_title_id    Int      @map("exp_title_id")
  exp_description String?  @db.VarChar(191)
  exp_amount      Decimal  @db.Decimal(10, 2)
  exp_date        DateTime @db.Date
  added_by        Int      @map("added_by")
  createdAt       DateTime @default(now()) @map("createdAt")
  updatedAt       DateTime @updatedAt @map("updatedAt")

  exp_title ExpenseTitle @relation(fields: [exp_title_id], references: [id])
  user      user         @relation(fields: [added_by], references: [id])

  @@index([exp_title_id])
  @@index([added_by])
  @@index([exp_date])
  @@map("Expense")
}

model Product {
  id                String   @id @db.VarChar(191)
  title             String   @db.VarChar(255)
  description       String?  @db.Text
  vendor            String?  @db.VarChar(255)
  productType       String?  @db.VarChar(255) @map("product_type")
  status            String   @default("active") @db.VarChar(50)
  image             String?  @db.VarChar(500)
  handle            String?  @unique @db.VarChar(191)
  salePrice         Decimal  @default(0) @db.Decimal(10, 2) @map("sale_price")
  originalPrice     Decimal  @default(0) @db.Decimal(10, 2) @map("original_price")
  costPrice         Decimal  @default(0) @db.Decimal(10, 2) @map("cost_price")
  quantity          Int      @default(0)
  categoryId        Int?     @map("categoryId")
  createdAt         DateTime @default(now()) @map("createdAt")
  updatedAt         DateTime @updatedAt @map("updatedAt")

  variants ProductVariant[]
  category Category?        @relation(fields: [categoryId], references: [id])

  @@index([categoryId])
  @@map("Product")
}

model ProductVariant {
  id                String   @id @db.VarChar(191)
  productId         String   @map("productId") @db.VarChar(191)
  title             String?  @db.VarChar(255)
  price             Decimal  @db.Decimal(10, 2)
  compareAtPrice    Decimal? @db.Decimal(10, 2) @map("compare_at_price")
  sku               String?  @db.VarChar(255)
  barcode           String?  @db.VarChar(255)
  inventoryQuantity Int      @default(0) @map("inventory_quantity")
  weight            Decimal? @db.Decimal(10, 2)
  weightUnit        String?  @db.VarChar(50) @map("weight_unit")
  createdAt         DateTime @default(now()) @map("createdAt")
  updatedAt         DateTime @updatedAt @map("updatedAt")

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@map("ProductVariant")
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(255)
  description String?  @db.Text
  slug        String   @unique @db.VarChar(191)
  createdAt   DateTime @default(now()) @map("createdAt")
  updatedAt   DateTime @updatedAt @map("updatedAt")

  products Product[]

  @@map("Category")
}

model Employee {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(255)
  phoneNumber String   @db.VarChar(50) @map("phone_number")
  city        String   @db.VarChar(100)
  address     String   @db.Text
  cnic        String?  @db.VarChar(20)
  createdAt   DateTime @default(now()) @map("createdAt")
  updatedAt   DateTime @updatedAt @map("updatedAt")

  @@map("Employee")
}

model Customer {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(255)
  phoneNumber String   @db.VarChar(50) @map("phone_number")
  address     String   @db.Text
  balance     Decimal  @default(0) @db.Decimal(10, 2)
  createdAt   DateTime @default(now()) @map("createdAt")
  updatedAt   DateTime @updatedAt @map("updatedAt")

  @@map("Customer")
}

model DayEnd {
  id             Int      @id @default(autoincrement())
  date           DateTime @unique @db.Date
  openingBalance Decimal  @default(0) @map("opening_balance") @db.Decimal(10, 2)
  totalExpenses  Decimal  @default(0) @map("total_expenses") @db.Decimal(10, 2)
  totalSales     Decimal  @default(0) @map("total_sales") @db.Decimal(10, 2)
  dailyCash      Decimal  @default(0) @map("daily_cash") @db.Decimal(10, 2)
  closingBalance Decimal  @default(0) @map("closing_balance") @db.Decimal(10, 2)
  createdAt      DateTime @default(now()) @map("createdAt")
  updatedAt      DateTime @updatedAt @map("updatedAt")

  @@map("DayEnd")
}
